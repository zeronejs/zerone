{
  "name": "product-collection-crx",
  "displayName": "商品采集",
  "version": "0.0.1",
  "description": "商品采集",
  "private": true,
  "scripts": {
    "dev": "npm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:background": "npm run build:background -- --mode development",
    "dev:web": "vite --config ./scripts/vite.popup.config.ts",
    "dev:js": "npm run build:js -- --mode development",
    "build": "cross-env NODE_ENV=production run-s clear build:web build:prepare build:background build:js",
    "build:prepare": "esno scripts/prepare.ts",
    "build:background": "vite build --config ./scripts/vite.background.config.ts",
    "build:web": "vite build --config ./scripts/vite.popup.config.ts",
    "build:js": "vite build --config ./scripts/vite.content.config.ts",
    "clear": "rimraf --glob extension/dist extension/manifest.json extension.*",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx --max-warnings 0 --cache",
    "lint:fix": "pnpm run lint --fix"
  },
  "dependencies": {
    "-": "^0.0.1",
    "@element-plus/icons-vue": "^2.1.0",
    "@vueuse/core": "^10.5.0",
    "D": "^1.0.0",
    "axios": "^1.6.0",
    "element-plus": "^2.4.1",
    "esno": "^0.17.0",
    "js-cookie": "^3.0.5",
    "pinia": "^2.1.7",
    "sass": "^1.69.5",
    "vue": "^3.3.7",
    "vue-clipboard3": "^2.0.0",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@tsconfig/node18": "^18.2.2",
    "@types/chrome": "^0.0.248",
    "@types/fs-extra": "^11.0.3",
    "@types/js-cookie": "^3.0.5",
    "@types/node": "^20.8.10",
    "@vitejs/plugin-vue": "^4.4.0",
    "@vue/tsconfig": "^0.4.0",
    "@zeronejs/eslint-config-vue3": "^0.0.6",
    "autoprefixer": "^10.4.16",
    "cross-env": "^7.0.3",
    "eslint": "^8.52.0",
    "eslint-plugin-prettier": "^5.0.1",
    "fs-extra": "^11.1.1",
    "kolorist": "^1.8.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.5",
    "ts-node": "^10.9.1",
    "typescript": "~5.1.3",
    "unplugin-auto-import": "^0.16.7",
    "unplugin-icons": "^0.16.6",
    "unplugin-vue-components": "^0.25.2",
    "vite": "~4.4.11",
    "vite-plugin-svg-icons": "^2.0.1",
    "vue-tsc": "^1.8.22"
  }
}
